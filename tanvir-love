<script>

// Typing effect
const text="Will You Be Tanvir's Valentine? ğŸ’";
let i=0;
function typing(){
if(i<text.length){
document.getElementById("typing").innerHTML+=text.charAt(i);
i++;
setTimeout(typing,80);
}
}
typing();

function yesClicked(){
